<?xml version="1.0"?>
<robot name="charmie" xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <material name ="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>
    
    <material name ="black">
        <color rgba="0 0 0 1" />
    </material>
    
    <material name ="light_grey">
        <color rgba="0.8 0.8 0.8 1" />
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

        <visual>
            <geometry>
                <box size="0.56 0.235 0.27" />
            </geometry>
            <origin xyz="0 0 0.135" rpy="0 0 0" />
            <material name="light_grey"/>
        </visual>

        <visual>
            <geometry>
                <box size="0.56 0.235 0.27" />
            </geometry>
            <origin xyz="0 0 0.135" rpy="0 0 ${pi/2}" />
            <material name="light_grey"/>
        </visual>

        <visual>
            <geometry>
                <box size="0.56 0.235 0.27" />
            </geometry>
            <origin xyz="0 0 0.135" rpy="0 0 ${pi/4}" />
            <material name="light_grey"/>
        </visual>

        <visual>
            <geometry>
                <box size="0.56 0.235 0.27" />
            </geometry>
            <origin xyz="0 0 0.135" rpy="0 0 -${pi/4}" />
            <material name="light_grey"/>
        </visual>

    </link>

    <!-- BASE FOOTPRINT -->

      
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">

    </link> 


    <!-- LIDAR -->

    <!-- <joint name="lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_lidar"/>
        <origin xyz="0.265 0.0 0.35"/>
    </joint>

    <link name="base_lidar">
        <visual>
            <geometry>
                <cylinder radius="0.019" length="0.024" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="black"/>
        </visual>

    </link> -->


    <!-- RIGHT WHEEL -->

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0 -0.255 0.05"/>
        <axis xyz="0 1 0"/>
    </joint>


    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.038"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>
    </link>


    <!-- LEFT WHEEL -->

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0 0.255 0.05"/>
        <axis xyz="0 1 0"/>
    </joint>


    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.038"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>
    </link>


    <!-- FRONT CASTER WHEEL -->

    <joint name="base_front_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_caster_wheel_link"/>
        <origin xyz="0.255 0 -0.025"/>
    </joint>


    <link name="front_caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
    </link>

    <!-- BACK CASTER WHEEL -->

    <joint name="base_back_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_caster_wheel_link"/>
        <origin xyz="-0.255 0 -0.025"/>
    </joint>


    <link name="back_caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
    </link>


</robot>